# Disruptor Configuration
# Copy these settings to your .env file or set as environment variables

# Performance Mode
# false = Lightweight mode (balanced CPU usage, good for development)
# true = High-performance mode (maximum speed, high CPU usage)
DISRUPTOR_HIGH_PERFORMANCE=false

# Buffer Size (only used in high-performance mode)
DISRUPTOR_BUFFER_SIZE=65536

# Wait Strategy (only used in high-performance mode)
# yielding = Balanced CPU usage and latency
# busy_spin = Ultra-low latency but high CPU usage
DISRUPTOR_WAIT_STRATEGY=yielding

# Backpressure Strategy (only used in high-performance mode)
# latest_only = Keep only latest data per symbol (recommended for market data)
DISRUPTOR_BACKPRESSURE=latest_only

# Number of Processors (only used in high-performance mode)
DISRUPTOR_PROCESSORS=2

# Monitoring
DISRUPTOR_MONITORING=true
DISRUPTOR_MONITOR_INTERVAL=30.0

# Logging
DISRUPTOR_LOG_LEVEL=INFO
DISRUPTOR_LOG_PERFORMANCE=false

# Environment
ENVIRONMENT=development